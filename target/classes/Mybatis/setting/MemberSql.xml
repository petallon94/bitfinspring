<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">


	<!-- 가입 -->
	<insert id="insertOfMember" parameterType="mdto">
		insert into member (mid,mnick,mpw,mhp,memail,mrole,mchat) values (
		#{mid},#{mnick},#{mpw},#{mhp},#{memail},#{mrole},#{mchat})
	</insert>

	<!-- 정보가져오기 -->
	<select id="selectOneOfMember" parameterType="String" resultType="mdto">
		select * from member where mnum=#{mnum}
	</select>

	<!-- 수정-->
	<update id="updateOfMember" parameterType="mdto">
		update member set mnick=#{mnick},mpw=#{mpw},mhp=#{mhp},mchat=#{mchat}
		 where mnum=#{mnum}
	</update>

	<!-- 삭제 -->
	<delete id="deleteOfMember" parameterType="String">
		delete from member where mnum=#{mnum}
	</delete>

	<!-- ID 확인 -->
	<select id="idCheckOfMember" parameterType="String" resultType="int">
		select count(*) from member where mid=#{mid}
	</select>

	<!-- 비번확인 -->
	<select id="pwCheckOfMember" parameterType="HashMap" resultType="int">
		select count(*) from member where mid=#{mid} and mpw=#{mpw}
	</select>

	<!-- 로그인 -->
	<select id="loginOfMember" parameterType="String" resultType="mdto">
		select * from member where mid=#{mid} and mpw=#{mpw}
	</select>

</mapper>